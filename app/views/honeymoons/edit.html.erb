<div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <div class="form-group form-padding">
    <%= simple_form_for @honeymoon do |form| %>
      <%= form.input :name, as: :string, placeholder: 'Name', class: "form-black" %>
      <%= form.input :email, required: true, as: :email, placeholder: 'Email', class: "form-control form-black", type: "email"  %>
      <%= form.input :comment, label: "Kommentar", as: :text, placeholder: 'Gibt es noch etwas was ihr uns mitteilen wollt? Was ist eure Ausrede falls ihr nicht kommt?', class: "form-control"  %>
      <%= form.input :additional, label: "Personen", required: true, as: :integer, placeholder: 'Wie viele Personen kommen?' %>
      <%= form.input :coming, required: true, as: :boolean, checked_value: true, unchecked_value: false, inline_label: 'Kommt ihr zum Gruppenflittern?'  %>
      <%= form.input :caravan, as: :boolean, checked_value: true, unchecked_value: false, inline_label: 'Wir brauchen einen Wohnwagen'  %>
      <%= form.input :tent, as: :boolean, checked_value: true, unchecked_value: false, inline_label: 'Wir brauchen einen Zeltplatz'  %>
       <%= form.input :ownbus, as: :boolean, checked_value: true, unchecked_value: false, inline_label: 'Wir schlafen im eigenen Bus / Wohnwagen'  %>
      <%= form.button :submit, "Update", class: "btn-lg btn-primary" %>
    <% end %>
  </div>
</div>




