<div class="col-xs-12 col-sm-10 col-sm-offset-1">
  <% @honeymoons.each do |honeymoon| %>

  <div class="guest">
    <div class="beschreibung">
        <div class="kommen">
          <span id="orange">Kommen?  </span><span><%= honeymoon.coming %></span>
        </div>
        <div class="name">
          <span id="orange">Name:  </span><span><%=honeymoon.name  %></span>
        </div>
        <div class="email">
          <span id="orange">Email:  </span><span><%=honeymoon.email  %></span>
        </div>
        <div class="erwachsene">
          <span id="orange">Personen:  </span><span><%=honeymoon.additional  %></span>
        </div>
        <div class="hotel">
          <span id="orange">Wohnwagen gewünscht?  </span><span><%=honeymoon.caravan  %></span>
        </div >
        <div class="hotel">
          <span id="orange">Zeltplatz gewünscht?  </span><span><%=honeymoon.tent  %></span>
        </div>
        <div class="hotel">
          <span id="orange">Eigener Bus / Wohnwagen?  </span><span><%=honeymoon.ownbus  %></span>
        </div>
        <div class="kommentar">
          <span id="orange">Kommentar:  </span><span><%=honeymoon.comment  %></span>
        </div>
    </div>

    <div class="guest-actions">
      <%= link_to "Ändern", edit_honeymoon_path(honeymoon), class:"guest-edit" %>
      <%= link_to "Löschen", honeymoon_path(honeymoon), class:"guest-delete",
      method: :delete,
      data: { confirm: "Bist du sicher?" } %>
    </div>


  </div>

  <% end %>
</div>

